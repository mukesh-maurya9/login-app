<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
      crossorigin="anonymous"
    ></script>
    <title>Sign Up</title>
  </head>
  <body>
    <div class="container mt-5 border border-outline p-5 col-6">
      <h2 class="text text-warning display-5 m-1 py-2">Sign Up</h2>
      <form
        action="/auth/signup"
        class="row g-3 needs-validation mt-4"
        method="POST"
      >
        <h2 class="text text-danger">{{alert}}</h2>
        <div class="col-md-4 mx-2">
          <label for="validationCustom01" class="form-label">First name</label>
          <input
            name="fName"
            type="text"
            placeholder="First Name"
            class="form-control"
            id="validationCustom01"
            minlength="3"
            maxlength="20"
            onkeypress="return (event.charCode > 64 && 
            event.charCode < 91) || (event.charCode > 96 && event.charCode < 123)"
            value=""
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="col-md-4 mx-2">
          <label for="validationCustom01" class="form-label">Last name</label>
          <input
            name="lName"
            type="text"
            placeholder="Last Name"
            class="form-control"
            id="validationCustom01"
            minlength="3"
            maxlength="20"
            onkeypress="return (event.charCode > 64 && 
            event.charCode < 91) || (event.charCode > 96 && event.charCode < 123)"
            value=""
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="col-md-4 mx-2">
          <label
            for="validationCustomUsername"
            class="form-label"
          >Username</label>
          <div class="input-group has-validation">
            <span class="input-group-text" id="inputGroupPrepend">@</span>
            <input
              name="email"
              type="email"
              class="form-control"
              minlength="10"
              maxlength="50"
              id="validationCustomUsername"
              placeholder="Username"
              aria-describedby="inputGroupPrepend"
              value=""
              required
            />
            <div class="invalid-feedback">
              Please choose a username.
            </div>
          </div>
        </div>
        <div class="col-md-4 mx-2">
          <label
            for="validationCustomUsername"
            class="form-label"
          >Password</label>
          <div class="input-group has-validation">
            <input
              name="password"
              type="password"
              class="form-control"
              minlength="8"
              maxlength="20"
              id="validationCustomUsername"
              placeholder="Password"
              aria-describedby="inputGroupPrepend"
              value=""
              required
            />
            <div class="invalid-feedback">
              Please choose min 8 to max 20 digit of alpha-numeric password.
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <label for="validationCustom03" class="form-label">About</label>
          <input
            name="about"
            type="text"
            class="form-control"
            placeholder="About"
            id="validationCustom03"
            value=""
            required
          />
          <div class="invalid-feedback">
            Please fill about your self.
          </div>
        </div>
        <div class="col-md-3">
          <label for="validationCustom04" class="form-label">Profile Image</label>
          <input type="file" name="Choose Image" value=""/>
          <div class="invalid-feedback">
            Image should be maximum 500kb.
          </div>
        </div>
        <div class="col-5 m-2 p-2">
          <button class="btn btn-primary" type="submit">Submit</button>
          <button class="btn btn-danger" type="submit">Clear</button>
          <div class="status">
            Already have account?
            <a href="/auth/login">Login</a>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>